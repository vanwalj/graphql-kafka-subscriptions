{
  "name": "@swapcard/graphql-kafka-subscriptions",
  "version": "0.3.0",
  "description": "Apollo graphql subscription over Kafka protocol",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "jest --watchAll",
    "build": "tsc",
    "lint": "tslint -p .",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ancashoria/graphql-kafka-subscriptions.git"
  },
  "keywords": ["graphql", "kafka", "apollo", "subscriptions"],
  "author": "Ancas Horia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ancashoria/graphql-kafka-subscriptions/issues"
  },
  "homepage":
    "https://github.com/ancashoria/graphql-kafka-subscriptions#readme",
  "jest": {
    "roots": ["<rootDir>/src/test"],
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$"
  },
  "dependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/node": "^9.4.0",
    "bunyan": "1.8.12",
    "graphql-subscriptions": "^0.5.6",
    "iterall": "^1.1.4",
    "node-rdkafka": "^2.2.1"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  }
}
